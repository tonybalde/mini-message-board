extends layout

block content
  h1= title

  form(method="POST" action="/new" class="message-form")
    div.form-group
      label(for="author") Author's Name:
      input(type="text", name="author", id="author", class="form-control", required)

    div.form-group
      label(for="message") Message Text:
      textarea(name="message", id="message", class="form-control", rows="4", required)
      
    button.btn(type="submit") Submit
